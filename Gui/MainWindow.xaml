<Window x:Class="CanUpdaterGui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CanUpdaterGui"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        DataContext="{Binding RelativeSource={RelativeSource Self}}">

    <Window.Resources>
        <local:HexArrayValueConverter x:Key="HexArrayValueConverter"></local:HexArrayValueConverter>
        <local:HexValueConverter x:Key="HexValueConverter"></local:HexValueConverter>
    </Window.Resources>
    <Window.CommandBindings>
        <CommandBinding Command="{x:Static local:MainWindow.ConnectCmd}" Executed="ConnectCommandBinding_Executed"/>
        <CommandBinding Command="{x:Static local:MainWindow.DisconnectCmd}" Executed="DisconnectCommandBinding_Executed"/>
        <CommandBinding Command="{x:Static local:MainWindow.ProgramCmd}" Executed="ProgramCommandBinding_Executed"/>
    </Window.CommandBindings>
    <!-- <Window.InputBindings> -->
    <!--     <KeyBinding Key="C" Modifiers="Control" Command="Connect"/> -->
    <!--     <KeyBinding Key="D" Modifiers="Control" Command="Disconnect"/> -->
    <!--     <KeyBinding Key="P" Modifiers="Control" Command="Program"/> -->
    <!-- </Window.InputBindings> -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"></RowDefinition>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Menu Grid.Row="0" Name="MenuBar">
            <MenuItem Header="_File">
                <MenuItem Header="_Open" />
                <MenuItem Header="_Close" />
                <MenuItem Header="_Save" />
            </MenuItem>
            <MenuItem Header="_Options">
                <MenuItem Header="Connection configuration"></MenuItem>
                <MenuItem Header="CAN configuration"></MenuItem>
            </MenuItem>
            <MenuItem Header="_Device" InputGestureText="D">
                <MenuItem Name="Connect" Header="_Connect" Command="{x:Static local:MainWindow.ConnectCmd}" InputGestureText="C"></MenuItem>
                <MenuItem Name="Disconnect" Header="_Disconnect" Command="{x:Static local:MainWindow.DisconnectCmd}"  InputGestureText="D"></MenuItem>
                <MenuItem Name="Program" Header="_Program" Command="{x:Static local:MainWindow.ProgramCmd}"  InputGestureText="P"></MenuItem>
            </MenuItem>
        </Menu>
        <Grid Grid.Row="1">
            <!-- <Button Height="30" Width="100"></Button> -->
            <TextBox Name="LoggerTextBox" Height="200" IsReadOnly="True"></TextBox>
        </Grid>
        <GridSplitter Grid.Row="2" ResizeDirection="Rows" ResizeBehavior="PreviousAndNext" BorderThickness="5"
                      HorizontalAlignment="Stretch" />
        <ListView Grid.Row="3" VerticalAlignment="Bottom" ItemsSource="{Binding Frames}">
            <ListView.View>
                <GridView AllowsColumnReorder="true"
                          ColumnHeaderToolTip="Employee Information">
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Timestamp}" Header="Timestamp"></GridViewColumn>
                    <GridViewColumn
                        DisplayMemberBinding="{Binding Path=Id, Converter={StaticResource HexValueConverter}}"
                        Header="Id" />
                    <GridViewColumn
                        DisplayMemberBinding="{Binding Path=Payload, Converter={StaticResource HexArrayValueConverter}}"
                        Header="Payload" />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>